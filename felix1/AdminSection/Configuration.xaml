<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:numericEntry="clr-namespace:Syncfusion.Maui.Inputs;assembly=Syncfusion.Maui.Inputs"
             xmlns:inputLayout="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="felix1.AdminSection.Configuration"
             BackgroundColor="White">

    <VerticalStackLayout Spacing="25"
            Padding="20">
        <!-- Company Information Section -->
        <Frame BackgroundColor="#F8F9FA"
               CornerRadius="12"
               HasShadow="True"
               BorderColor="#E9ECEF"
               Padding="20">
            <VerticalStackLayout Spacing="20">
                <Label Text="Información de la Empresa"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="#005F8C"
                       Margin="0,0,0,10"/>

                <Grid RowSpacing="15"
                        ColumnSpacing="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Company Name -->
                    <VerticalStackLayout Grid.Row="0"
                            Grid.Column="0"
                            Spacing="5">
                        <Label Text="Nombre de la Empresa:"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="#005F8C"/>
                        <Frame BackgroundColor="White"
                               CornerRadius="8"
                               Padding="0"
                               HasShadow="False"
                               BorderColor="#C7CFDD">
                            <Entry x:Name="txtCompany"
                                   Placeholder="Ingrese el nombre de la empresa"
                                   TextColor="#005F8C"
                                   BackgroundColor="Transparent"
                                   FontSize="14"/>
                        </Frame>
                    </VerticalStackLayout>

                    <!-- Address -->
                    <VerticalStackLayout Grid.Row="0"
                            Grid.Column="1"
                            Spacing="5">
                        <Label Text="Dirección:"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="#005F8C"/>
                        <Frame BackgroundColor="White"
                               CornerRadius="8"
                               Padding="0"
                               HasShadow="False"
                               BorderColor="#C7CFDD">
                            <Entry x:Name="txtAddress"
                                   Placeholder="Ingrese la dirección"
                                   TextColor="#005F8C"
                                   BackgroundColor="Transparent"
                                   FontSize="14"/>
                        </Frame>
                    </VerticalStackLayout>

                    <!-- Email -->
                    <VerticalStackLayout Grid.Row="1"
                            Grid.Column="0"
                            Spacing="5">
                        <Label Text="Email:"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="#005F8C"/>
                        <Frame BackgroundColor="White"
                               CornerRadius="8"
                               Padding="0"
                               HasShadow="False"
                               BorderColor="#C7CFDD">
                            <Entry x:Name="txtEmail"
                                   Placeholder="Ingrese el email"
                                   TextColor="#005F8C"
                                   Keyboard="Email"
                                   BackgroundColor="Transparent"
                                   FontSize="14"/>
                        </Frame>
                    </VerticalStackLayout>

                    <!-- Phone -->
                    <VerticalStackLayout Grid.Row="1"
                            Grid.Column="1"
                            Spacing="5">
                        <Label Text="Teléfono:"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="#005F8C"/>
                        <Frame BackgroundColor="White"
                               CornerRadius="8"
                               Padding="0"
                               HasShadow="False"
                               BorderColor="#C7CFDD">
                            <numericEntry:SfNumericEntry x:Name="txtPhone"
                                                         CustomFormat="000-000-0000"
                                                         Placeholder="000-000-0000"
                                                         ShowClearButton="False"
                                                         TextColor="#005F8C"
                                                         FontSize="14"
                                                         BackgroundColor="Transparent"
                                                         Stroke="Transparent"/>
                        </Frame>
                    </VerticalStackLayout>

                    <!-- RNC -->
                    <VerticalStackLayout Grid.Row="2"
                            Grid.Column="0"
                            Spacing="5">
                        <Label Text="RNC:"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="#005F8C"/>
                        <Frame BackgroundColor="White"
                               CornerRadius="8"
                               Padding="0"
                               HasShadow="False"
                               BorderColor="#C7CFDD">
                            <numericEntry:SfNumericEntry x:Name="txtRNC"
                                                         CustomFormat="0"
                                                         Value="130622914"
                                                         ShowClearButton="False"
                                                         TextColor="#005F8C"
                                                         FontSize="14"
                                                         BackgroundColor="Transparent"
                                                         Stroke="Transparent"/>
                        </Frame>
                    </VerticalStackLayout>

                    <!-- Comment -->
                    <VerticalStackLayout Grid.Row="2"
                            Grid.Column="1"
                            Spacing="5">
                        <Label Text="Comentario Al Pie De Factura:"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="#005F8C"/>
                        <Frame BackgroundColor="White"
                               CornerRadius="8"
                               Padding="0"
                               HasShadow="False"
                               BorderColor="#C7CFDD">
                            <Entry x:Name="txtComment"
                                   Placeholder="Ingrese el comentario"
                                   Text="GRACIAS POR PREFERIRNOS"
                                   TextColor="#005F8C"
                                   BackgroundColor="Transparent"
                                   FontSize="14"/>
                        </Frame>
                    </VerticalStackLayout>
                </Grid>
            </VerticalStackLayout>
        </Frame>

        <!-- Tax Configuration Section -->
        <Frame BackgroundColor="#F8F9FA"
               CornerRadius="12"
               HasShadow="True"
               BorderColor="#E9ECEF"
               Padding="20">
            <VerticalStackLayout Spacing="20">
                <Label Text="Configuración de Impuestos"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="#005F8C"
                       Margin="0,0,0,10"/>

                <Grid RowSpacing="15"
                        ColumnSpacing="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- ITBIS Tax -->
                    <VerticalStackLayout Grid.Row="0"
                            Grid.Column="0"
                            Spacing="5">
                        <Label Text="ITBIS (%)"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="#005F8C"/>
                        <Frame BackgroundColor="White"
                               CornerRadius="8"
                               Padding="0"
                               HasShadow="False"
                               BorderColor="#C7CFDD">
                            <numericEntry:SfNumericEntry x:Name="txtTax"
                                                         CustomFormat="0"
                                                         Value="18"
                                                         ShowClearButton="False"
                                                         TextColor="#005F8C"
                                                         FontSize="14"
                                                         BackgroundColor="Transparent"
                                                         Stroke="Transparent"/>
                        </Frame>
                    </VerticalStackLayout>

                    <!-- Delivery Tax -->
                    <VerticalStackLayout Grid.Row="0"
                            Grid.Column="1"
                            Spacing="5">
                        <Label Text="Impuesto Delivery (%)"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="#005F8C"/>
                        <Frame BackgroundColor="White"
                               CornerRadius="8"
                               Padding="0"
                               HasShadow="False"
                               BorderColor="#C7CFDD">
                            <numericEntry:SfNumericEntry x:Name="txtDeliveryTax"
                                                         CustomFormat="0"
                                                         Value="10"
                                                         ShowClearButton="False"
                                                         TextColor="#005F8C"
                                                         FontSize="14"
                                                         BackgroundColor="Transparent"
                                                         Stroke="Transparent"/>
                        </Frame>
                    </VerticalStackLayout>

                    <!-- Waiter Tax -->
                    <VerticalStackLayout Grid.Row="0"
                            Grid.Column="2"
                            Spacing="5">
                        <Label Text="Propina Mesero (%)"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="#005F8C"/>
                        <Frame BackgroundColor="White"
                               CornerRadius="8"
                               Padding="0"
                               HasShadow="False"
                               BorderColor="#C7CFDD">
                            <numericEntry:SfNumericEntry x:Name="txtWaiterTax"
                                                         CustomFormat="0"
                                                         Value="10"
                                                         ShowClearButton="False"
                                                         TextColor="#005F8C"
                                                         FontSize="14"
                                                         BackgroundColor="Transparent"
                                                         Stroke="Transparent"/>
                        </Frame>
                    </VerticalStackLayout>
                </Grid>
            </VerticalStackLayout>
        </Frame>

        <!-- Save Button -->

        <Button Text="Guardar Cambios"
                x:Name="btnSave"
                Clicked="btnSave_Clicked"
                HeightRequest="50"
                BackgroundColor="#005F8C"
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="10"
                FontSize="16"
                HorizontalOptions="Fill"/>
    </VerticalStackLayout>
</ContentView>
