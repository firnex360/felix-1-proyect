<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:syncfusion="clr-namespace:Syncfusion.Maui.DataGrid;assembly=Syncfusion.Maui.DataGrid"
             BackgroundColor="White"
             x:Class="felix1.ListUserVisual"
             NavigationPage.HasNavigationBar="False">

    <Grid RowDefinitions="Auto,*">

        <HorizontalStackLayout Grid.Row="0"
                               Spacing="20">

            <Frame
                BackgroundColor="#F5F7FA"
                CornerRadius="10"
                Padding="0"
                HasShadow="False"
                VerticalOptions="Center"
                HeightRequest="40"
                BorderColor="#F5F7FA"
                WidthRequest="340"
                Margin="20,10,0,0">

                <SearchBar x:Name="searchBar"
                           Placeholder="Buscar usuario..."
                           TextChanged="OnSearchBarTextChanged"
                           TextColor="#22223B"
                           PlaceholderColor="#A0AEC0"
                           BackgroundColor="Transparent"
                           CancelButtonColor="#005F8C"
                           FontSize="16"
                           Margin="8,0"
                           HeightRequest="40"
                           HorizontalOptions="Fill"/>
            </Frame>

            <Button Margin="0,10,0,0"
                    Text="Agregar Usuario"
                    TextColor="#F3F3F3"
                    BackgroundColor="#005F8C"
                    Clicked="OnCreateUserWindowClicked"
                    HorizontalOptions="Start"
                    VerticalOptions="Center"/>

        </HorizontalStackLayout>

        <!-- Fullscreen DataGrid -->
        <Frame Grid.Row="1"
               CornerRadius="10"
               Padding="0"
               HasShadow="True"
               BackgroundColor="#F3F3F3"
               BorderColor="#F5F7FA"
               Margin="20"
               VerticalOptions="Fill"
               HorizontalOptions="Start">

            <syncfusion:SfDataGrid x:Name="dataGrid"
                                   ItemsSource="{Binding Users}"
                                   VerticalOptions="Fill"
                                   HorizontalOptions="Fill"
                                   HeaderRowHeight="60"
                                   AutoGenerateColumnsMode="None"
                                   RowHeight="50"
                                   SortingMode="Single"
                                   AllowTriStateSorting="True"
                                   VerticalOverScrollMode="Bounce"
                                   EmptyView="No hay registros">

                <syncfusion:SfDataGrid.DefaultStyle>
                    <syncfusion:DataGridStyle HeaderRowBackground="#005F8C"
                                              HeaderRowTextColor="#F3F3F3"
                                              RowTextColor="#005F8C"
                                              HeaderRowFontAttributes="Bold"/>
                </syncfusion:SfDataGrid.DefaultStyle>

                <!-- Custom Columns -->
                <syncfusion:SfDataGrid.Columns>

                    <!-- ID Column -->
                    <syncfusion:DataGridNumericColumn
                        MappingName="Id"
                        HeaderText="Codigo"
                        Format="0000"
                        CellTextAlignment="Start"
                        HeaderTextAlignment="Start"
                        ColumnWidthMode="FitByHeader"/>

                    <!-- Name Column -->
                    <syncfusion:DataGridTextColumn
                        MappingName="Name"
                        HeaderText="Nombre"
                        CellTextAlignment="Start"
                        HeaderTextAlignment="Start"
                        ColumnWidthMode="FitByCell"
                        MaximumWidth="300"
                        MinimumWidth="150"/>

                    <!-- Username Column -->
                    <syncfusion:DataGridTextColumn
                        MappingName="Username"
                        HeaderText="Usuario"
                        CellTextAlignment="Start"
                        HeaderTextAlignment="Start"
                        ColumnWidthMode="FitByCell"
                        MaximumWidth="300"
                        MinimumWidth="150"/>

                    <!-- Role Column -->
                    <syncfusion:DataGridTextColumn
                        MappingName="Role"
                        HeaderText="Rol"
                        CellTextAlignment="Start"
                        HeaderTextAlignment="Start"
                        ColumnWidthMode="FitByCell"
                        MaximumWidth="300"
                        MinimumWidth="150"/>

                    <!-- Available Column as Checkbox -->
                    <syncfusion:DataGridTemplateColumn HeaderText="Disponible"
                                                       MappingName="Available"
                                                       ColumnWidthMode="FitByHeader"
                                                       CellTextAlignment="Center">

                        <syncfusion:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid VerticalOptions="Center" HorizontalOptions="Center">
                                    <CheckBox IsChecked="{Binding Available}"
                                              IsEnabled="True"
                                              HorizontalOptions="Center"
                                              VerticalOptions="Center"
                                              CheckedChanged="OnAvailableCheckedChanged"/>
                                </Grid>
                            </DataTemplate>
                        </syncfusion:DataGridTemplateColumn.CellTemplate>
                    </syncfusion:DataGridTemplateColumn>

                    <syncfusion:DataGridTemplateColumn HeaderText="Actions"
                                                       ColumnWidthMode="LastColumnFill">
                        <syncfusion:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <HorizontalStackLayout Spacing="10"
                                                       HorizontalOptions="Center">

                                    <ImageButton
                                        Source="editing.png"
                                        CornerRadius="10"
                                        Padding="10"
                                        WidthRequest="28"
                                        HeightRequest="28"
                                        BackgroundColor="#FFD6D7DA"
                                        Clicked="OnEditClicked"
                                        VerticalOptions="Center">
                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroupList>
                                                <VisualStateGroup x:Name="CommonStates">
                                                    <VisualState x:Name="Normal">
                                                        <VisualState.Setters>
                                                            <Setter Property="BackgroundColor"
                                                                    Value="Transparent"/>
                                                        </VisualState.Setters>
                                                    </VisualState>
                                                    <VisualState x:Name="PointerOver">
                                                        <VisualState.Setters>
                                                            <Setter Property="BackgroundColor"
                                                                    Value="#FFD6D7DA"/>
                                                        </VisualState.Setters>
                                                    </VisualState>
                                                </VisualStateGroup>
                                            </VisualStateGroupList>
                                        </VisualStateManager.VisualStateGroups>
                                    </ImageButton>

                                    <ImageButton
                                        Source="delete.png"
                                        CornerRadius="10"
                                        Padding="10"
                                        WidthRequest="28"
                                        HeightRequest="28"
                                        BackgroundColor="Transparent"
                                        Clicked="OnDeleteClicked"
                                        VerticalOptions="Center">
                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroupList>
                                                <VisualStateGroup x:Name="CommonStates">
                                                    <VisualState x:Name="Normal">
                                                        <VisualState.Setters>
                                                            <Setter Property="BackgroundColor"
                                                                    Value="Transparent"/>
                                                        </VisualState.Setters>
                                                    </VisualState>
                                                    <VisualState x:Name="PointerOver">
                                                        <VisualState.Setters>
                                                            <Setter Property="BackgroundColor"
                                                                    Value="#D0FF0000"/>
                                                        </VisualState.Setters>
                                                    </VisualState>
                                                </VisualStateGroup>
                                            </VisualStateGroupList>
                                        </VisualStateManager.VisualStateGroups>
                                    </ImageButton>

                                </HorizontalStackLayout>
                            </DataTemplate>
                        </syncfusion:DataGridTemplateColumn.CellTemplate>
                    </syncfusion:DataGridTemplateColumn>
                </syncfusion:SfDataGrid.Columns>
            </syncfusion:SfDataGrid>
        </Frame>

    </Grid>
</ContentView>
