<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:syncfusion="clr-namespace:Syncfusion.Maui.DataGrid;assembly=Syncfusion.Maui.DataGrid"
             BackgroundColor="White"
             x:Class="felix1.ListUserVisual">

    <Grid RowDefinitions="Auto,*">

        <HorizontalStackLayout Grid.Row="0"
                               Spacing="20">

            <Frame
                BackgroundColor="#F5F7FA"
                CornerRadius="10"
                Padding="0"
                HasShadow="False"
                VerticalOptions="Center"
                HeightRequest="44"
                BorderColor="#FF74777A"
                WidthRequest="340"
                Margin="20,10,0,0">

                <SearchBar x:Name="searchBar"
                           Placeholder="Buscar usuario..."
                           TextChanged="OnSearchBarTextChanged"
                           TextColor="#22223B"
                           PlaceholderColor="#A0AEC0"
                           BackgroundColor="Transparent"
                           CancelButtonColor="#4F8FCB"
                           FontSize="16"
                           Margin="8,0"
                           HeightRequest="44"
                           HorizontalOptions="Fill"/>
            </Frame>

            <Button Margin="0,10,0,0"
                    Text="Agregar Usuario"
                    TextColor="Black"
                    BackgroundColor="#33B7E3"
                    Clicked="OnCreateUserWindowClicked"
                    HorizontalOptions="Start"
                    VerticalOptions="Center"/>

        </HorizontalStackLayout>

        <!-- Fullscreen DataGrid -->
        <Frame Grid.Row="1"
               CornerRadius="10"
               Padding="0"
               HasShadow="True"
               BackgroundColor="#F5F7FA"
               Margin="20">

            <syncfusion:SfDataGrid x:Name="dataGrid"
                                   ItemsSource="{Binding Users}"
                                   VerticalOptions="Fill"
                                   HorizontalOptions="Fill"
                                   HeaderRowHeight="50"
                                   ColumnWidthMode="FitByHeader"
                                   AutoGenerateColumnsMode="None">

                <!-- Custom Columns -->
                <syncfusion:SfDataGrid.Columns>

                    <!-- ID Column -->
                    <syncfusion:DataGridNumericColumn
                        MappingName="Id"
                        HeaderText="Id Usuario"
                        Format="000"/>

                    <!-- Name Column -->
                    <syncfusion:DataGridTextColumn
                        MappingName="Name"
                        HeaderText="Nombre"/>

                    <!-- Username Column -->
                    <syncfusion:DataGridTextColumn
                        MappingName="Username"
                        HeaderText="Usuario"/>

                    <!-- Role Column -->
                    <syncfusion:DataGridTextColumn
                        MappingName="Role"
                        HeaderText="Rol"/>

                    <!-- Available Column as Checkbox -->
                    <syncfusion:DataGridTemplateColumn HeaderText="Disponible"
                            MappingName="Available">
                        <syncfusion:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding Available}"
                                        IsEnabled="True"/>
                            </DataTemplate>
                        </syncfusion:DataGridTemplateColumn.CellTemplate>
                    </syncfusion:DataGridTemplateColumn>

                    <syncfusion:DataGridTemplateColumn HeaderText="Actions"
                                                       Width="300">
                        <syncfusion:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <HorizontalStackLayout Spacing="10"
                                                       HorizontalOptions="Center">

                                    <ImageButton
                                        Source="editing.png"
                                        CornerRadius="10"
                                        Padding="10"
                                        WidthRequest="10"
                                        HeightRequest="10"
                                        BackgroundColor="Transparent"
                                        Clicked="OnEditClicked"
                                        VerticalOptions="Center"/>

                                    <ImageButton
                                        Source="delete.png"
                                        CornerRadius="10"
                                        Padding="10"
                                        WidthRequest="10"
                                        HeightRequest="10"
                                        BackgroundColor="#FFFF1D1D"
                                        Clicked="OnDeleteClicked"
                                        VerticalOptions="Center"/>

                                </HorizontalStackLayout>
                            </DataTemplate>
                        </syncfusion:DataGridTemplateColumn.CellTemplate>
                    </syncfusion:DataGridTemplateColumn>
                </syncfusion:SfDataGrid.Columns>
            </syncfusion:SfDataGrid>
        </Frame>

    </Grid>
</ContentView>
