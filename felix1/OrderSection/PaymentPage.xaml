<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:felix1.OrderSection"
             x:Class="felix1.OrderSection.PaymentPage"
             BackgroundColor="#FFFFFF"
             Title="Pago">

    <ContentPage.Resources>
        <ResourceDictionary>
            <local:BoolToColorConverter x:Key="BoolToColorConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="*, Auto"
          ColumnDefinitions="*, 30, *"
          Padding="20"
          RowSpacing="20">

        <ScrollView Grid.Row="0" Grid.Column="0"
                    Orientation="Vertical"
                    VerticalScrollBarVisibility="Always">
            <VerticalStackLayout Spacing="15">
                <Frame BackgroundColor="#F5F5F5"
                       CornerRadius="10"
                       BorderColor="#FFE0E0E0"
                       HasShadow="True"
                       Padding="20">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Detalles" FontAttributes="Bold" FontSize="18" TextColor="#005F8C" />

                        <CollectionView x:Name="ItemsList" ItemsSource="{Binding Order.Items}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid ColumnDefinitions="*, Auto" ColumnSpacing="10">
                                        <HorizontalStackLayout Grid.Column="0" Spacing="5">
                                            <Label Text="{Binding ArticleName}" TextColor="#005F8C" />
                                            <Label Text="{Binding UnitPrice, StringFormat='${0:F2}'}" TextColor="#005F8C" />
                                        </HorizontalStackLayout>
                                        <Label Grid.Column="1" Text="{Binding Quantity, StringFormat='x{0}'}" TextColor="#005F8C" HorizontalOptions="End" />
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                        <BoxView HeightRequest="1" BackgroundColor="#005F8C" Margin="0,10" />

                        <HorizontalStackLayout>
                            <Label Text="Items" TextColor="#005F8C" />
                            <Label Text="{Binding Subtotal, StringFormat='${0:F2}'}" HorizontalOptions="EndAndExpand" TextColor="#005F8C" />
                        </HorizontalStackLayout>
                        <HorizontalStackLayout>
                            <Label Text="Impuestos (5%)" TextColor="#005F8C" />
                            <Label Text="{Binding Tax, StringFormat='${0:F2}'}" HorizontalOptions="EndAndExpand" TextColor="#005F8C" />
                        </HorizontalStackLayout>
                        <HorizontalStackLayout>
                            <Label Text="Total" FontAttributes="Bold" TextColor="#005F8C" />
                            <Label Text="{Binding Total, StringFormat='${0:F2}'}" FontAttributes="Bold" HorizontalOptions="EndAndExpand" TextColor="#005F8C" />
                        </HorizontalStackLayout>

                        <BoxView HeightRequest="1" BackgroundColor="#005F8C" Margin="0,10" IsVisible="{Binding AnyPaymentMethodUsed}"/>

                        <HorizontalStackLayout IsVisible="{Binding IsCashUsed}">
                            <Label Text="Efectivo:" TextColor="#005F8C" />
                            <Label Text="{Binding CashAmount, StringFormat='${0:F2}'}" 
                                   HorizontalOptions="EndAndExpand" 
                                   TextColor="#005F8C" />
                        </HorizontalStackLayout>

                        <HorizontalStackLayout IsVisible="{Binding IsCardUsed}">
                            <Label Text="Tarjeta:" TextColor="#005F8C" />
                            <Label Text="{Binding CardAmount, StringFormat='${0:F2}'}" 
                                   HorizontalOptions="EndAndExpand" 
                                   TextColor="#005F8C" />
                        </HorizontalStackLayout>

                        <HorizontalStackLayout IsVisible="{Binding IsTransferUsed}">
                            <Label Text="Transferencia:" TextColor="#005F8C" />
                            <Label Text="{Binding TransferAmount, StringFormat='${0:F2}'}" 
                                   HorizontalOptions="EndAndExpand" 
                                   TextColor="#005F8C" />
                        </HorizontalStackLayout>

                        <HorizontalStackLayout IsVisible="{Binding AnyPaymentMethodUsed}">
                            <Label Text="Total Pagado:" FontAttributes="Bold" TextColor="#005F8C" />
                            <Label Text="{Binding TotalPayment, StringFormat='${0:F2}'}" 
                                   FontAttributes="Bold" 
                                   HorizontalOptions="EndAndExpand" 
                                   TextColor="#005F8C" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Frame>

                <Frame IsVisible="{Binding IsCashUsed}"
                       BackgroundColor="#F5F5F5"
                       CornerRadius="10"
                       BorderColor="#FFE0E0E0"
                       HasShadow="True"
                       Padding="15">
                    <VerticalStackLayout Spacing="8">
                        <HorizontalStackLayout>
                            <Label Text="Total" FontAttributes="Bold" TextColor="#005F8C" />
                            <Label Text="{Binding Total, StringFormat='${0:F2}'}" FontAttributes="Bold" HorizontalOptions="EndAndExpand" TextColor="#005F8C" />
                        </HorizontalStackLayout>
                        <HorizontalStackLayout>
                            <Label Text="Devuelta" FontAttributes="Bold" TextColor="#005F8C" />
                            <Label Text="{Binding ChangeAmount, StringFormat='${0:F2}'}" FontAttributes="Bold" HorizontalOptions="EndAndExpand" TextColor="#005F8C" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>
        </ScrollView>

        <VerticalStackLayout Grid.Row="0" Grid.Column="2" Spacing="15">
            <Label Text="MÃ©todos de pago" FontAttributes="Bold" FontSize="18" TextColor="#005F8C" />

            <ScrollView Orientation="Vertical" VerticalScrollBarVisibility="Always">
                <VerticalStackLayout Spacing="15">
                    <Button x:Name="AddPaymentMethodButton" 
                            Text="+" 
                            WidthRequest="50" 
                            HeightRequest="50" 
                            CornerRadius="25" 
                            FontSize="20" 
                            BackgroundColor="#005F8C" 
                            TextColor="White"
                            Clicked="OnAddPaymentMethodClicked"
                            HorizontalOptions="Start"/>

                    <StackLayout x:Name="ActivePaymentMethodsContainer" Spacing="10">
                    </StackLayout>
                </VerticalStackLayout>
            </ScrollView>

            <Label x:Name="PaymentSummaryLabel"
                   Text="Pagado: $0.00 / $0.00"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />
        </VerticalStackLayout>

        <Button Grid.Row="1" Grid.Column="2"
                Text="Charge"
                BackgroundColor="#005F8C"
                TextColor="White"
                CornerRadius="8"
                WidthRequest="150"
                HeightRequest="40"
                HorizontalOptions="End"
                VerticalOptions="End"
                Clicked="OnChargeClicked" />
    </Grid>
</ContentPage>