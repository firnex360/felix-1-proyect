<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:buttons="clr-namespace:Syncfusion.Maui.Buttons;assembly=Syncfusion.Maui.Buttons"
             xmlns:numericEntry ="clr-namespace:Syncfusion.Maui.Inputs;assembly=Syncfusion.Maui.Inputs"
             xmlns:inputLayout="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="felix1.OrderSection.CreateCashRegisterVisual"
             BackgroundColor="White"
             NavigationPage.HasNavigationBar="False">
    <VerticalStackLayout>
        <Frame BackgroundColor="#005F8C" Padding="20" Margin="0" HasShadow="True" BorderColor="#005F8C">
            <VerticalStackLayout HorizontalOptions="Center">
                <Label x:Name="lblCashRegisterStatus" Text="No hay cajas abiertas" FontSize="24" HorizontalOptions="Center" TextColor="#F3F3F3"/>
                <Label x:Name="lblActionPrompt" Text="Por favor, abrir una caja antes de empezar" FontSize="16" HorizontalOptions="Center" TextColor="#F3F3F3"/>
            </VerticalStackLayout>
        </Frame>

        <VerticalStackLayout Spacing="10" Padding="10">
            <Label x:Name="lblInitialMoney" Text="Cantidad inicial en caja" HorizontalOptions="Center" TextColor="#005F8C"/>

            <inputLayout:SfTextInputLayout WidthRequest="200" 
                                            HorizontalOptions="Center" 
                                            ContainerType="None">
                <numericEntry:SfNumericEntry x:Name="txtInitialMoney" 
                                            AllowNull="False" 
                                            ShowClearButton="True" 
                                            TextColor="Black"
                                            CustomFormat="C2"/>
            </inputLayout:SfTextInputLayout>

            <HorizontalStackLayout HorizontalOptions="Center">
                <Label x:Name="lblSecondaryPrice" Text="Precio secundario activado" VerticalOptions="Center" TextColor="#005F8C"/>
                <CheckBox
                    x:Name="cbxSecondaryPrice"
                    IsChecked="false" 
                    BackgroundColor="#FFECECEC"
                    Color="#005F8C"/>
            </HorizontalStackLayout>

            <Button x:Name="btnCrearCajaNueva"
                Text="Crear Caja Nueva"
                Clicked="OnShowCreateForm"
                WidthRequest="250"
                BackgroundColor="#005F8C"
                FontFamily="Inter"
                FontSize="16"
                TextColor="#F3F3F3"
                FontAttributes="Bold"
                IsVisible="False" />

            <Button x:Name="btnCrearCaja"
                Text="Crear Caja"
                Clicked="OnSaveCashRegister"
                WidthRequest="250"
                BackgroundColor="#005F8C"
                TextColor="#F3F3F3"
                FontFamily="Inter"
                FontSize="16"
                FontAttributes="Bold"
                IsVisible="True" />
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>