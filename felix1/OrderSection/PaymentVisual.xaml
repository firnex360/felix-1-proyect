<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:felix1.OrderSection"
             x:Class="felix1.OrderSection.PaymentVisual"
             BackgroundColor="#FFFFFF">

    <ContentPage.Resources>
        <ResourceDictionary>
            <local:BoolToColorConverter x:Key="BoolToColorConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="*, Auto"
          ColumnDefinitions="*, 30, *"
          Padding="20"
          RowSpacing="20">

        <VerticalStackLayout Grid.Row="0" Grid.Column="0" Spacing="15">
            <Frame BackgroundColor="#F5F5F5"
                   CornerRadius="10"
                   BorderColor="#FFE0E0E0"
                   HasShadow="True"
                   Padding="0">
                <ScrollView Orientation="Vertical" 
                            VerticalScrollBarVisibility="Always"
                            Padding="20,20,30,20">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Detalles" FontAttributes="Bold" FontSize="20" TextColor="#005F8C" />

                        <CollectionView x:Name="ItemsList" ItemsSource="{Binding Order.Items}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid ColumnDefinitions="*, Auto" ColumnSpacing="10">
                                        <HorizontalStackLayout Grid.Column="0" Spacing="5">
                                            <Label Text="{Binding ArticleName}" TextColor="#005F8C" />
                                            <Label Text="{Binding UnitPrice, StringFormat='${0:F2}'}" TextColor="#005F8C" />
                                        </HorizontalStackLayout>
                                        <Label Grid.Column="1" 
                                               Text="{Binding Quantity, StringFormat='x{0}'}" 
                                               TextColor="#005F8C" 
                                               HorizontalOptions="End"/>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                        <BoxView HeightRequest="1" BackgroundColor="#005F8C" Margin="0,10" />

                        <Grid ColumnDefinitions="Auto, *, Auto">

                            <Label Text="Items" 
                                   Grid.Column="0" 
                                   TextColor="#005F8C" 
                                   HorizontalOptions="Start"/>

                            <Label Text="{Binding Subtotal, StringFormat='${0:F2} '}" 
                                   Grid.Column="1" 
                                   TextColor="#005F8C" 
                                   HorizontalOptions="Start"/>

                            <Label Text="{Binding ItemsCount, StringFormat='x{0}'}" 
                                   Grid.Column="2" 
                                   TextColor="#005F8C" 
                                   HorizontalOptions="End"/>
                        </Grid>

                        <HorizontalStackLayout>
                            <Label Text="ITBIS (18%)" TextColor="#005F8C" />
                            <Label Text="{Binding TaxITBIS, StringFormat=' ${0:F2}'}" HorizontalOptions="End" TextColor="#005F8C" />
                        </HorizontalStackLayout>
                        <HorizontalStackLayout>
                            <Label Text="Propina (10%)" TextColor="#005F8C" />
                            <Label Text="{Binding TaxWaiters, StringFormat=' ${0:F2}'}" HorizontalOptions="End" TextColor="#005F8C" />
                        </HorizontalStackLayout>
                        <HorizontalStackLayout>
                            <Label Text="Total" FontAttributes="Bold" TextColor="#005F8C" />
                            <Label Text="{Binding Total, StringFormat=' ${0:F2}'}" FontAttributes="Bold" HorizontalOptions="End" TextColor="#005F8C" />
                        </HorizontalStackLayout>

                        <BoxView HeightRequest="1" BackgroundColor="#005F8C" Margin="0,10" IsVisible="{Binding AnyPaymentMethodUsed}"/>

                        <HorizontalStackLayout IsVisible="{Binding IsCashUsed}">
                            <Label Text="Efectivo:" TextColor="#005F8C" />
                            <Label Text="{Binding CashAmount, StringFormat=' ${0:F2}'}" 
                                   HorizontalOptions="End" 
                                   TextColor="#005F8C" />
                        </HorizontalStackLayout>

                        <HorizontalStackLayout IsVisible="{Binding IsCardUsed}">
                            <Label Text="Tarjeta:" TextColor="#005F8C" />
                            <Label Text="{Binding CardAmount, StringFormat=' ${0:F2}'}" 
                                   HorizontalOptions="End" 
                                   TextColor="#005F8C" />
                        </HorizontalStackLayout>

                        <HorizontalStackLayout IsVisible="{Binding IsTransferUsed}">
                            <Label Text="Transferencia:" TextColor="#005F8C" />
                            <Label Text="{Binding TransferAmount, StringFormat=' ${0:F2}'}" 
                                   HorizontalOptions="End" 
                                   TextColor="#005F8C" />
                        </HorizontalStackLayout>

                        <HorizontalStackLayout IsVisible="{Binding AnyPaymentMethodUsed}">
                            <Label Text="Total Pagado:" FontAttributes="Bold" TextColor="#005F8C" />
                            <Label Text="{Binding TotalPayment, StringFormat=' ${0:F2}'}" 
                                   FontAttributes="Bold" 
                                   HorizontalOptions="End" 
                                   TextColor="#005F8C" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </ScrollView>
            </Frame>

            <Frame IsVisible="{Binding IsCashUsed}"
                   BackgroundColor="White"
                   CornerRadius="10"
                   BorderColor="White"
                   HasShadow="True"
                   Padding="15">
                <VerticalStackLayout Spacing="8">
                    <HorizontalStackLayout>
                        <Label Text="Total" FontAttributes="Bold" TextColor="#005F8C" FontSize="30" />
                        <Label Text="{Binding Total, StringFormat=' ${0:F2}'}" FontAttributes="Bold" FontSize="30" HorizontalOptions="End" TextColor="#005F8C" />
                    </HorizontalStackLayout>
                    <HorizontalStackLayout>
                        <Label Text="Devuelta" FontAttributes="Bold" TextColor="#005F8C" FontSize="30" />
                        <Label Text="{Binding ChangeAmount, StringFormat=' ${0:F2}'}" FontAttributes="Bold" FontSize="30" HorizontalOptions="EndAndExpand" TextColor="#005F8C" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>

        <VerticalStackLayout Grid.Row="0" Grid.Column="2" Spacing="15">
            <Label Text="MÃ©todos de pago" FontAttributes="Bold" FontSize="20" TextColor="#005F8C" />

            <ScrollView Orientation="Vertical" VerticalScrollBarVisibility="Always">
                <VerticalStackLayout Spacing="15">
                    <HorizontalStackLayout Spacing="10">
                        <Button Text="Transferencia" 
                                WidthRequest="120"
                                HeightRequest="40" 
                                CornerRadius="8" 
                                FontSize="14" 
                                BackgroundColor="#005F8C" 
                                TextColor="White"
                                FontAttributes="Bold"
                                Clicked="OnAddTransferClicked"/>

                        <Button Text="Tarjeta" 
                                WidthRequest="120"
                                HeightRequest="40" 
                                CornerRadius="8" 
                                FontSize="14" 
                                BackgroundColor="#005F8C" 
                                TextColor="White"
                                FontAttributes="Bold"
                                Clicked="OnAddCardClicked"/>
                    </HorizontalStackLayout>

                    <StackLayout x:Name="ActivePaymentMethodsContainer" Spacing="10">
                    </StackLayout>
                </VerticalStackLayout>
            </ScrollView>

            <Label x:Name="PaymentSummaryLabel"
                   Text="Pagado: $0.00 / $0.00"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />
        </VerticalStackLayout>

        <Button Grid.Row="1" Grid.Column="2"
                Text="Charge"
                BackgroundColor="#005F8C"
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="8"
                WidthRequest="150"
                HeightRequest="40"
                HorizontalOptions="End"
                VerticalOptions="End"
                Clicked="OnChargeClicked" />
    </Grid>
</ContentPage>