<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="felix1.OrderSection.ListWaiterVisual"
             NavigationPage.HasNavigationBar="False">
             
    <Grid x:Name="MainGrid" BackgroundColor="#FFCC1818">
        
        <!--    SCROLLABLE MESERO   -->
        <ScrollView Grid.Column="0" Orientation="Vertical" VerticalOptions="Fill" HorizontalOptions="Fill">
            <HorizontalStackLayout x:Name="MeseroContainer"
                                Spacing="10"
                                Padding="10"
                                BackgroundColor="#F5F7FA"
                                VerticalOptions="Fill" 
                                HorizontalOptions="Fill" />
        </ScrollView>
        
    </Grid>
</ContentView>