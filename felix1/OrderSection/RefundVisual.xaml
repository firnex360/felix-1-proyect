<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:syncfusion="clr-namespace:Syncfusion.Maui.DataGrid;assembly=Syncfusion.Maui.DataGrid"
             x:Class="felix1.OrderSection.RefundVisual"
             BackgroundColor="White">

    <Grid RowDefinitions="Auto,Auto,*,Auto,Auto,Auto" ColumnDefinitions="*,*" 
          Padding="20" RowSpacing="10" ColumnSpacing="10">

        <!-- Títulos -->
        <Label Grid.Row="0" Grid.Column="0"
               TextColor="#005F8C"
               Text="Artículos Originales"
               FontAttributes="Bold"
               FontSize="16"/>

        <Label Grid.Row="0" Grid.Column="1"
               TextColor="#005F8C"
               Text="Artículos a Devolver"
               FontAttributes="Bold"
               FontSize="16"/>

        <!-- Tablas de artículos -->
        <Frame Grid.Row="1" Grid.Column="0" Grid.RowSpan="2"
               CornerRadius="10"
               Padding="0"
               Margin="0,5"
               HasShadow="True"
               VerticalOptions="FillAndExpand"
               HorizontalOptions="FillAndExpand"
               BackgroundColor="#F5F5F5"
               BorderColor="#F5F5F5">

            <syncfusion:SfDataGrid x:Name="originalItemsDataGrid"
                                   ItemsSource="{Binding OriginalItems}"
                                   HeaderRowHeight="60"
                                   RowHeight="50"
                                   AutoGenerateColumnsMode="None"
                                   SelectionMode="Multiple"
                                   NavigationMode="Cell"
                                   SelectionChanged="OnOriginalItemSelected">

                <syncfusion:SfDataGrid.EmptyView>
                    <Label Text="No hay artículos"
                           TextColor="#005F8C"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                </syncfusion:SfDataGrid.EmptyView>

                <syncfusion:SfDataGrid.DefaultStyle>
                    <syncfusion:DataGridStyle HeaderRowBackground="#005F8C"
                                              HeaderRowTextColor="#F5F5F5"
                                              RowTextColor="Black"
                                              HeaderRowFontAttributes="Bold"
                                              SelectionBackground="#C7CFDD"
                                              CurrentCellBorderColor="#C7CFDD"/>
                </syncfusion:SfDataGrid.DefaultStyle>

                <syncfusion:SfDataGrid.Columns>
                    <syncfusion:DataGridTextColumn MappingName="ArticleName" HeaderText="Nombre"
                                                   CellTextAlignment="Start" HeaderTextAlignment="Start"/>
                    <syncfusion:DataGridNumericColumn MappingName="Quantity" HeaderText="Cantidad"
                                                      Format="0" CellTextAlignment="Center" HeaderTextAlignment="Center"/>
                    <syncfusion:DataGridNumericColumn MappingName="UnitPrice" HeaderText="Precio"
                                                      Format="C2" CellTextAlignment="End" HeaderTextAlignment="End"/>
                    <syncfusion:DataGridNumericColumn MappingName="TotalPrice" HeaderText="Total"
                                                      Format="C2" CellTextAlignment="Start" HeaderTextAlignment="Start" ColumnWidthMode="Fill"/>
                </syncfusion:SfDataGrid.Columns>
            </syncfusion:SfDataGrid>
        </Frame>

        <Frame Grid.Row="1" Grid.Column="1" Grid.RowSpan="2"
               CornerRadius="10"
               Padding="0"
               Margin="0,5"
               HasShadow="True"
               VerticalOptions="FillAndExpand"
               HorizontalOptions="FillAndExpand"
               BackgroundColor="#F3F3F3"
               BorderColor="#F5F7FA">

            <syncfusion:SfDataGrid x:Name="refundedItemsDataGrid"
                                   ItemsSource="{Binding RefundedItems}"
                                   HeaderRowHeight="60"
                                   RowHeight="50"
                                   AutoGenerateColumnsMode="None"
                                   SelectionMode="Multiple"
                                   NavigationMode="Cell"
                                   SelectionChanged="OnRefundedItemSelected">

                <syncfusion:SfDataGrid.EmptyView>
                    <Label Text="No hay artículos"
                           TextColor="#005F8C"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                </syncfusion:SfDataGrid.EmptyView>

                <syncfusion:SfDataGrid.DefaultStyle>
                    <syncfusion:DataGridStyle HeaderRowBackground="#005F8C"
                                              HeaderRowTextColor="#F5F5F5"
                                              RowTextColor="Black"
                                              HeaderRowFontAttributes="Bold"
                                              SelectionBackground="#C7CFDD"
                                              CurrentCellBorderColor="#C7CFDD"/>
                </syncfusion:SfDataGrid.DefaultStyle>

                <syncfusion:SfDataGrid.Columns>
                    <syncfusion:DataGridTextColumn MappingName="ArticleName" HeaderText="Nombre"
                                                   CellTextAlignment="Start" HeaderTextAlignment="Start"/>
                    <syncfusion:DataGridNumericColumn MappingName="Quantity" HeaderText="Cantidad"
                                                      Format="0" CellTextAlignment="Center" HeaderTextAlignment="Center"/>
                    <syncfusion:DataGridNumericColumn MappingName="UnitPrice" HeaderText="Precio"
                                                      Format="C2" CellTextAlignment="End" HeaderTextAlignment="End"/>
                    <syncfusion:DataGridNumericColumn MappingName="TotalPrice" HeaderText="Total"
                                                      Format="C2" CellTextAlignment="Start" HeaderTextAlignment="Start" ColumnWidthMode="Fill"/>
                </syncfusion:SfDataGrid.Columns>
            </syncfusion:SfDataGrid>
        </Frame>

        <!-- Botones de transferencia -->
        <StackLayout Grid.Row="3" Grid.Column="0" Orientation="Horizontal" Spacing="10" HorizontalOptions="Center">
            <Button Text="Agregar Seleccionados" 
                    Clicked="OnAddSelectedToRefund"
                    BackgroundColor="#005F8C"
                    FontAttributes="Bold"
                    TextColor="White"
                    FontSize="14"
                    WidthRequest="200"
                    HeightRequest="40"
                    CornerRadius="8"/>

            <Button Text="Agregar Todo" 
                    Clicked="OnAddAllToRefund"
                    BackgroundColor="#005F8C"
                    FontAttributes="Bold"
                    TextColor="White"
                    FontSize="14"
                    WidthRequest="150"
                    HeightRequest="40"
                    CornerRadius="8"/>
        </StackLayout>

        <StackLayout Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Spacing="10" HorizontalOptions="Center">
            <Button Text="Quitar Seleccionados" 
                    Clicked="OnRemoveSelectedFromRefund"
                    BackgroundColor="#005F8C"
                    TextColor="White"
                    FontAttributes="Bold"
                    FontSize="14"
                    WidthRequest="200"
                    HeightRequest="40"
                    CornerRadius="8"/>

            <Button Text="Quitar Todo" 
                    Clicked="OnRemoveAllFromRefund"
                    BackgroundColor="#005F8C"
                    TextColor="White"
                    FontAttributes="Bold"
                    FontSize="14"
                    WidthRequest="150"
                    HeightRequest="40"
                    CornerRadius="8"/>
        </StackLayout>

        <!-- Totales -->
        <StackLayout Grid.Row="4" Grid.Column="0" Orientation="Horizontal" Spacing="10" HorizontalOptions="End">
            <Label Text="Total Orden:" 
                   TextColor="#005F8C"
                   FontFamily="Inter"
                   FontAttributes="Bold"
                   FontSize="14"/>
            <Label Text="{Binding OrderTotal, StringFormat='{0:C2}'}" 
                   TextColor="#005F8C"
                   FontFamily="Inter"
                   FontAttributes="Bold"
                   FontSize="14"/>
        </StackLayout>

        <StackLayout Grid.Row="4" Grid.Column="1" Orientation="Horizontal" Spacing="10" HorizontalOptions="End">
            <Label Text="Total Devolución:" 
                   TextColor="#005F8C"
                   FontFamily="Inter"
                   FontAttributes="Bold"
                   FontSize="14"/>
            <Label Text="{Binding RefundTotal, StringFormat='{0:C2}'}" 
                   TextColor="#005F8C"
                   FontAttributes="Bold"
                   FontFamily="Inter"
                   FontSize="14"/>
        </StackLayout>

        <!-- Botones inferiores -->
        <Grid Grid.Row="5" Grid.ColumnSpan="2"
              ColumnDefinitions="*,Auto,Auto"
              VerticalOptions="Center"
              Padding="0,10"
              ColumnSpacing="15">

            <!-- Razón de devolución -->
            <Frame Grid.Column="0"
                   BackgroundColor="White"
                   BorderColor="#E9ECEF"
                   CornerRadius="6"
                   HasShadow="True"
                   Padding="5,2"
                   VerticalOptions="Center"
                   HorizontalOptions="FillAndExpand">
                <Entry Text="{Binding Refund.Reason}"
                       Placeholder="Ingrese el motivo de la devolución"
                       FontSize="14"
                       FontFamily="Inter"
                       FontAttributes="None"
                       BackgroundColor="Transparent"
                       TextColor="#005F8C"/>
            </Frame>

            <!-- Botón Descartar -->
            <Button Grid.Column="1"
                    Text="Descartar"
                    Command="{Binding DiscardCommand}"
                    BackgroundColor="Black"
                    TextColor="White"
                    FontFamily="Inter"
                    MinimumWidthRequest="130"
                    HeightRequest="45"
                    FontAttributes="Bold"
                    CornerRadius="6"
                    Margin="0,0,10,0"
                    HorizontalOptions="End"
                    VerticalOptions="Center"/>

            <!-- Botón Charge -->
            <Button Grid.Column="2"
                    Text="Procesar"
                    Command="{Binding ProcessRefundCommand}"
                    BackgroundColor="#005F8C"
                    FontFamily="Inter"
                    TextColor="White"
                    MinimumWidthRequest="130"
                    HeightRequest="45"
                    FontAttributes="Bold"
                    CornerRadius="6"
                    HorizontalOptions="End"
                    VerticalOptions="Center"/>
        </Grid>
    </Grid>
</ContentPage>