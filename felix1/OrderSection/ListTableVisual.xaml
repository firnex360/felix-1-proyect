<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="felix1.OrderSection.ListTableVisual"
             NavigationPage.HasNavigationBar="False">
             
    <Grid x:Name="MainGrid" ColumnDefinitions="*, Auto" BackgroundColor="White">
        
        <!--    SCROLLABLE MESERO   -->
        <ScrollView Grid.Column="0" Orientation="Horizontal" VerticalOptions="Fill">
            <HorizontalStackLayout x:Name="MeseroContainer"
                                Spacing="10"
                                Padding="10"
                                BackgroundColor="#F5F7FA"
                                VerticalOptions="Fill" />
        </ScrollView>
        
        <!--    STATIC TAKEOUT   -->
        <Grid Grid.Column="1"
            WidthRequest="300"
            x:Name="TakeoutPanel" 
            Padding="10" 
            VerticalOptions="Fill"
            BackgroundColor="#F5F7FA">
                
                <Frame
                CornerRadius="10"
                Padding = "10"
                BackgroundColor="White"
                BorderColor="White"
                VerticalOptions="Fill"
                WidthRequest="300">
                    <VerticalStackLayout x:Name="TakeoutContainer" 
                                        Spacing="12"
                                        VerticalOptions="Fill">
                        <Label
                            Text="Takeout"
                            FontSize="18"
                            FontAttributes="Bold"
                            TextColor="Black"
                            HorizontalOptions="Center" />
                        <VerticalStackLayout x:Name="TakeoutOrdersContainer"
                                            Spacing="5"
                                            VerticalOptions="Start" />
                    </VerticalStackLayout>
                </Frame>

            </Grid>

    </Grid>
</ContentView>