<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="felix1.OrderSection.CreateTableVisual"
             NavigationPage.HasNavigationBar="False">
    
    <VerticalStackLayout
        Padding="20"
        Spacing="15"
        BackgroundColor="White">

        <Label Text="Crear Nueva Mesa" FontSize="20" HorizontalOptions="Center" />

        <Entry x:Name="entryLocalNumber" Placeholder="Número local" Keyboard="Numeric" />
        <Entry x:Name="entryGlobalNumber" Placeholder="Número global" Keyboard="Numeric" />

        <Button Text="Crear"
                Clicked="OnCreateClicked"
                BackgroundColor="LightBlue"
                TextColor="White" />

    </VerticalStackLayout>
</ContentPage>